global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend www-https
    bind *:443 ssl crt etc/haproxy/ssl/www.mugishab2020.tech.pem
    default_backend www-backend

backend www-backend
    redirect scheme https code 301 if !{ ssl_fc }
        balance roundrobin
        server server1 52.91.134.54:80 check
        server server2 107.22.142.103:80 check

listen stats
    bind *:8080
    stats enable
    stats uri /stats
